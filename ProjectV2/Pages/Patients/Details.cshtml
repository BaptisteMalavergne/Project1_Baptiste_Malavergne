@page "{id:int}"
@model ProjectV2.Pages.Patients.DetailsModel
@{
    ViewData["Title"] = "Patient Details";
}

<link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">

<h2>Patient Details</h2>

@if (Model.Patient != null)
{
        <table class="table">
            <tr>
                <th>First Name:</th>
                <td>@Model.Patient.FirstName</td>
            </tr>
            <tr>
                <th>Last Name:</th>
                <td>@Model.Patient.LastName</td>
            </tr>
            <tr>
                <th>Date of Birth:</th>
                <td>@Model.Patient.DateOfBirth.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Sex:</th>
                <td>@Model.Patient.Sex</td>
            </tr>
        </table>

        <h3>Medical Records</h3>
    @if (Model.Patient.MedicalRecords != null && Model.Patient.MedicalRecords.Count > 0)
    {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Disease Name</th>
                        </tr>
                    </thead>
                    <tbody>
                @foreach (var record in Model.Patient.MedicalRecords)
                {
                                <tr>
                                    <td>@record.DiseaseName</td>
                                </tr>
                }
                    </tbody>
                </table>
    }
    else
    {
                <p>No medical records available.</p>
    }

        <a href="/Patients/Index" class="btn btn-secondary">Back to List</a>
}
else
{
        <p>Patient not found.</p>
        <a href="/Patients/Index" class="btn btn-secondary">Back to List</a>
}
